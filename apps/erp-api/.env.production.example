# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database Configuration
# Use Neon or other managed PostgreSQL service in production
DATABASE_URL="postgresql://user:password@your-db-host.region.provider.com/erp-production"

# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=production

# Better Auth Configuration
# CRITICAL: Generate strong random secrets for production
# Use: openssl rand -base64 32
BETTER_AUTH_SECRET="REPLACE-WITH-STRONG-RANDOM-SECRET-MIN-32-CHARS"
BETTER_AUTH_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# JWT Configuration
# CRITICAL: Generate strong random secret for production
# Use: openssl rand -base64 32
# Must be at least 32 characters
JWT_SECRET="REPLACE-WITH-STRONG-RANDOM-SECRET-MIN-32-CHARS"
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Testing Helpers
# CRITICAL: Never set to true in production
BYPASS_AUTH_FOR_TESTS=false

# Production Deployment Checklist:
# ✓ Replace all secrets with strong random values
# ✓ Use managed PostgreSQL (Neon, AWS RDS, etc.)
# ✓ Enable HTTPS/SSL
# ✓ Configure CORS for your frontend domain
# ✓ Set up monitoring and error tracking
# ✓ Review and adjust LOG_LEVEL as needed
# ✓ Ensure BYPASS_AUTH_FOR_TESTS is false
