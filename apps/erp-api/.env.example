# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/erp-api"

# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secure-random-secret-min-32-chars-change-in-production
BETTER_AUTH_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# JWT Configuration (legacy - kept for backward compatibility)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Testing Configuration
# Set to true to bypass auth middleware when running automated tests locally
BYPASS_AUTH_FOR_TESTS=false

# For Integration Tests:
# Create a separate test database and set DATABASE_URL to point to it
# Example: DATABASE_URL="postgresql://postgres:postgres@localhost:5432/erp-test"
# Or use Neon (recommended): DATABASE_URL="postgresql://user:pass@ep-xxx.region.aws.neon.tech/erp-test"
# Ensure JWT_SECRET is at least 32 characters for tests
# Set NODE_ENV=test when running integration tests
